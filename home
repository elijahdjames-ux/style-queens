  <script>
    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Simple cart counter + quantity controls
    const cartCount = document.getElementById('cartCount');
    let cart = 0;
    document.querySelectorAll('[data-add]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const qty = Number(btn.parentElement.querySelector('span').textContent) || 1;
        cart += qty;
        cartCount.textContent = cart;
        btn.textContent = 'Added!';
        btn.style.background = 'linear-gradient(135deg,#f0f9ff,#ecfeff)';
        setTimeout(() => { btn.textContent = 'Add to cart'; btn.style.background = '#fff'; }, 800);
      });
    });
    document.querySelectorAll('[data-inc]').forEach(b=>b.addEventListener('click',()=>{
      const s=b.parentElement.querySelector('span'); s.textContent = Number(s.textContent)+1;
    }));
    document.querySelectorAll('[data-dec]').forEach(b=>b.addEventListener('click',()=>{
      const s=b.parentElement.querySelector('span'); s.textContent = Math.max(1, Number(s.textContent)-1);
    }));

    // Filter chips
    const chips = document.querySelectorAll('.chip');
    const grid = document.getElementById('productGrid');
    chips.forEach(chip=>{
      chip.addEventListener('click',()=>{
        chips.forEach(c=>c.setAttribute('aria-pressed','false'));
        chip.setAttribute('aria-pressed','true');
        const f = chip.dataset.filter;
        grid.querySelectorAll('.card').forEach(card=>{
          const show = f==='all' || card.dataset.category===f;
          card.style.display = show ? 'flex' : 'none';
        });
      });
    });

    // Newsletter (demo only)
    document.getElementById('newsletter').addEventListener('submit', (e)=>{
      e.preventDefault();
      const email = e.target.email.value.trim();
      if(!email){return}
      alert('Thanks! A 10% welcome code is on its way to '+ email + ' (demo).');
      e.target.reset();
    });
  </script>
